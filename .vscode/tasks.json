{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build hello world",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "\"${workspaceFolder}/helloWorld.cpp\"", // Notice the quotes and forward slashes
        "-o",
        "\"${workspaceFolder}/helloWorld.exe\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}